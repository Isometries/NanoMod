#!/bin/bash

create_patcher_package() {
	ZIP="${CWD}/NanoMod-patcher-${VERSION}".zip
	rm -f "${ZIP}"

	print_package "Framework Patcher"

	cd "${CWD}/patcher"
	zip_add
	cd "${CWD}"

	zip_add_doc
}

mk_pkg_patcher () {
	create_patcher_package &
	progress $!
}


