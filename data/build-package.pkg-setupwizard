#!/bin/bash

create_setupwizard_package() {
	ZIP="${CWD}/NanoMod-setupwizard-${VERSION}".zip
	rm -f "${ZIP}"

	echo "
Creating Package

	Type		Setup Wizard
	Name		$(basename ${ZIP})
	Directory	$(dirname ${ZIP})
"

	cd "${CWD}/setup-wizard"
	zip_add
	cd "${CWD}"

	zip_add README.md
	zip_add ChangeLog.md

	echo "Done"
}

mk_pkg_setupwizard () {
	create_setupwizard_package &
	progress $!
}
