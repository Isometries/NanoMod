#!/bin/bash

create_patcher_package() {
	ZIP="${CWD}/NanoMod-patcher-${VERSION}".zip
	rm -f "${ZIP}"

	echo "
Creating Package

	Type		Framework Patcher
	Name		$(basename ${ZIP})
	Directory	$(dirname ${ZIP})
"

	cd "${CWD}/patcher"
	zip_add
	cd "${CWD}"

	zip_add README.md
	zip_add ChangeLog.md

	echo "Done"
}

mk_pkg_patcher () {
	create_patcher_package &
	progress $!
}
