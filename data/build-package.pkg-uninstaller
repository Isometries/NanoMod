#!/bin/bash

create_uninstaller_package() {
	ZIP="${CWD}/NanoMod-uninstaller-${VERSION}".zip
	rm -f "${ZIP}"

	echo "
Creating Package

	Type		Uninstaller
	Name		$(basename ${ZIP})
	Directory	$(dirname ${ZIP})
"

	cd "${CWD}/uninstaller"
	zip_add
	cd "${CWD}"

	zip_add README.md
	zip_add ChangeLog.md

	echo "Done"
}

mk_pkg_uninstaller () {
	create_uninstaller_package &
	progress $!
}
